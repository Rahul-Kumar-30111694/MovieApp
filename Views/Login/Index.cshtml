<div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <form class="box" method="post" asp-controller="Login" asp-action="Login">
                        <h1>Login</h1>
                        <p class="text-muted"> Please enter your login and password!</p>
                        <input type="text" name="EmailAddress" placeholder="Email Address">
                        <input type="password" name="Password" placeholder="Password"> <br>
                        <button class="button" type="submit" style="color: black;">Login</button><br><br>
                        <label for="">Create New Account!</label><br>
                        <a class="signupbutton" asp-controller="SignUp" asp-action="Index" style="color :#3498db;">Sign
                            Up</a><br><br>
                        <a class="forgotpassword" asp-controller="ForgotPassword" asp-action="Index">Forgot password
                            ?</a>
                    </form>
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <script>
                            alert("@ViewBag.ErrorMessage");
                        </script>
                    }
                </div>
            </div>
        </div>
    </div>
</div>