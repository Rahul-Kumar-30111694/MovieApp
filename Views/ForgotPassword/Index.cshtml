<div>
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="card">
                    <form class="box" method="post" asp-controller="ForgotPassword" asp-action="ForgotPassword">
                        <h1>Forgot Password</h1>
                        <p class="text-muted"> Please enter your Credentials.</p>
                        <input type="text" name="EmailAddress" placeholder="Username"><br>
                        <input type="password" name="Password" placeholder="Password">
                        <input type="password" name="ConfirmPassword" placeholder="Confirm Password"> <br>
                        <button class="button" type="submit" style="color: black;">Submit</button><br><br>
                        <label for="">Already Have Account!</label><br>
                        <a class="signupbutton" asp-controller="SignUp" asp-action="Index" style="color :#3498db;">Login</a><br><br>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>